<!DOCTYPE html>
<html>
  <head>
    <title>Craftsy</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!-- Compiled and minified CSS -->
 <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.99.0/css/materialize.min.css">

 <!-- Compiled and minified JavaScript -->
 <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.99.0/js/materialize.min.js"></script>
         
  </head>

  <body>
  <nav class="navbar navbar-inverse">
<div class="container-fluid">
  <div class="navbar-header">
    <li class="navbar-brand"><%= link_to "Home", root_path %></li>
    <li class="navbar-brand"><%= link_to "Products", products_path %></li>

  </div>
  <ul class="nav navbar-nav">
  </ul>
  <ul class="nav pull-right" id="sign_in">
    <% if current_user %>
    <%= current_user.email %> | <%= link_to "Sign out", '/users/sign_out', :method => :delete %>
    <% else %>
    <%= link_to "Sign up", '/users/sign_up' %> | <%= link_to "Sign in", '/users/sign_in' %>
    <% end %>
  </ul>
</div>
</nav>

  <%= flash[:alert] %>
  <%= flash[:notice] %>
  <%= yield %>
</html>
